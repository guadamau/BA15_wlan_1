CC  = gcc

CF  = -std=gnu99 -ggdb3 -O0

LB  = -lbsd

t_meas:	t_meas.o t_attrs.o ../src/collect.o ../src/pstring.o
	$(CC) $(CF) t_meas.o t_attrs.o collect.o pstring.o $(LB) -o t_meas

.c.o:
	$(CC) $(CF) -c $<

clean:
	rm *.o t_meas

all:
	rm *.o t_meas
	make

